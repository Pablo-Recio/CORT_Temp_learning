	file = {McEwen and Wingfield - 2003 - The concept of allostasis in biology and biomedici.pdf:/Users/u7409838/Zotero/storage/NBN8WC25/McEwen and Wingfield - 2003 - The concept of allostasis in biology and biomedici.pdf:application/pdf},
	issn = {0018506X},
	journal = {Hormones and Behavior},
	language = {en},
