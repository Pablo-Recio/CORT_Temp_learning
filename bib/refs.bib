	issn = {1662-5161},
	journal = {Frontiers in Human Neuroscience},
	language = {en},
	title = {Two {Systems} of {Non}-{Symbolic} {Numerical} {Cognition}},
	url = {http://journal.frontiersin.org/article/10.3389/fnhum.2011.00150/abstract},
	urldate = {2023-06-21},
	volume = {5},
	year = {2011},
