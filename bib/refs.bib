	issn = {1442-9985, 1442-9993},
	journal = {Austral Ecology},
	language = {en},
	month = dec,
	number = {8},
	pages = {937--947},
	title = {Combined effect of incubation and ambient temperature on the feeding performance of a small ectotherm},
	url = {https://onlinelibrary.wiley.com/doi/10.1111/j.1442-9993.2006.01663.x},
