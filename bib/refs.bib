	file = {Noble et al. - 2018 - Developmental temperatures and phenotypic plastici.pdf:/Users/u7409838/Zotero/storage/4LSM9MA3/Noble et al. - 2018 - Developmental temperatures and phenotypic plastici.pdf:application/pdf},
