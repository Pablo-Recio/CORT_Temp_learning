	pages = {72--97},
	shorttitle = {Developmental temperatures and phenotypic plasticity in reptiles},
	title = {Developmental temperatures and phenotypic plasticity in reptiles: a systematic review and meta-analysis: {Incubation} temperature and plasticity},
	url = {https://onlinelibrary.wiley.com/doi/10.1111/brv.12333},
